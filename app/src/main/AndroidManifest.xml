<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marcelodonato.desafiomblabs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@color/white"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesafioMblabs">

        <activity
            android:name="com.marcelodonato.desafiomblabs.presentation.splash.view.SplashActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.marcelodonato.desafiomblabs.presentation.login.view.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.marcelodonato.desafiomblabs.presentation.register.view.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.marcelodonato.desafiomblabs.presentation.home.view.HomeActivity"
            android:exported="true" />
        <activity
            android:name="com.marcelodonato.desafiomblabs.presentation.registerEvent.view.RegisterEventActivity"
            android:exported="true" />

        <activity
            android:name="com.marcelodonato.desafiomblabs.presentation.profile.view.ProfileActivity"
            android:exported="true" />

    </application>
</manifest>